
@model Product

<div class="row">
    <div class="col-md-12">   
        <div class="text-center"> 
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            
            <img class="img-fluid shadow rounded-5 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName" width="350" />
            <p class="lead text-danger"> @Model.Price.ToString("c")</p>
        </div>
    </div> 
</div>

   
  <div class="text-center">  
     <div class="btn-group">
        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
        <i class="fa-solid fa-house"></i>
            Anasayfaya Geri Dön</a>

            <form id="@Model.ProductId" asp-page="/Cart" method="post"> 
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="fa-solid fa-cart-shopping"></i>

            </button>
            
            </form>

     <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
        <i class="fa-solid fa-list"></i>
        Biletleri Görüntüle</a>

     </div>
  </div>
@section Header{
    <div>
        Header for only Get
    </div>

}